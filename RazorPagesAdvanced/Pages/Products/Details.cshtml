@page "{id:int}"
@model RazorPagesAdvanced.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Product.Name</h2>
<p>@Model.Product.Description</p>
<p>Categories: @string.Join(", ", Model.Product.Categories.Select(c => c.Name))</p>
<a href="/Products/Index">Back</a>
